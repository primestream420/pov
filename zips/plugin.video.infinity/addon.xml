				<visible>
					[String.IsEqual(Window(home).Property(context.infinity.rescrape),true) +
					String.StartsWith(ListItem.FolderPath,plugin://plugin.video.infinity/?action=play) +
					String.IsEqual(ListItem.Property(isInfinity_widget),true) +
